<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="PLAIN_LOG" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} - %-5level \(%class:%line\) [%thread]: %message%n</pattern>
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="PLAIN_LOG" />
	</root>
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG"/>
</configuration> 